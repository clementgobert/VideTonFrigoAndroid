<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".VideTonFrigo">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/reg">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="357dp"
            android:layout_height="88dp"
            android:layout_weight="0.13"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/logo_accueil" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:id="@+id/linearLayout2"

            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Identifiant"
                android:id="@+id/textView"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="135dp"
                android:layout_marginRight="135dp"
                android:layout_centerInParent="true"
                android:textColor="#000"></TextView>
        </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:weightSum="1"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mot de passe"
                android:id="@+id/textView"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_centerInParent="true"
                android:textColor="#000"
                android:layout_weight="0.34"></TextView>

        </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_below="@+id/linearLayout3"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/linearLayout3"
            android:id="@+id/linearLayout4"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/editText2"
            android:layout_below="@+id/linearLayout4"
            android:id="@+id/linearLayout6">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignStart="@+id/linearLayout3"
            android:layout_toStartOf="@+id/editText2"
            android:id="@+id/linearLayout5">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout4"
            android:layout_toStartOf="@+id/linearLayout6"
            android:id="@+id/linearLayout7" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/imageView2"
                android:background="#000"
                android:layout_gravity="center_horizontal"
                android:layout_alignTop="@+id/linearLayout5"
                android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageView3"
            android:background="#000"
            android:layout_alignTop="@+id/linearLayout6"
            android:layout_alignEnd="@+id/linearLayout7" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageView4"
            android:layout_gravity="right"
            android:background="#000"
            android:layout_alignTop="@+id/linearLayout5"
            android:layout_toEndOf="@+id/linearLayout5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:id="@+id/button"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se souvenir de moi"
            android:id="@+id/checkBox"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S'inscrire"
            android:id="@+id/button2"
            android:layout_below="@+id/checkBox"
            android:layout_centerHorizontal="true" />


         </RelativeLayout>

    </RelativeLayout>

